<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    >

    <Button
        android:id="@+id/btn_work_search_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="조회/입력"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@drawable/button_bakcground"
        app:layout_constraintBottom_toBottomOf="@+id/txt_work_order_id"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/txt_work_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="[사원번호]"
        android:textSize="40sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_work_prod_id"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_work_text_3" />

    <TextView
        android:id="@+id/txt_work_prod_name"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_work_prod_id"
        app:layout_constraintStart_toEndOf="@+id/txt_work_prod_id" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginBottom="200dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_work_prod_id" />

    <TextView
        android:id="@+id/txt_work_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="[생산오더]"
        android:textSize="40sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_work_text_1" />

    <EditText
        android:id="@+id/txt_work_order_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:hint="ID 입력"
        android:inputType="text"
        android:textColorHint="@color/teal_700"
        android:textSize="40sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/txt_work_text_3"
        app:layout_constraintTop_toBottomOf="@+id/txt_work_emp_id" />

    <TextView
        android:id="@+id/txt_work_prod_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:hint="작업시간"
        android:textSize="40sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/txt_work_text_3"
        app:layout_constraintStart_toEndOf="@+id/txt_work_order_id" />

    <TextView
        android:id="@+id/txt_work_prod_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:autoSizeMinTextSize="10dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_work_end" />

    <Button
        android:id="@+id/btn_work_search_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="조회/입력"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@drawable/button_bakcground"
        app:layout_constraintBottom_toBottomOf="@+id/txt_work_emp_id"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_work_start"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="작업 시작"
        android:textSize="80sp"
        android:textColor="@color/button_text_color"
        android:background="@drawable/button_bakcground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <Button
        android:id="@+id/btn_work_pause"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="작업중지/사유입력"
        android:textSize="80sp"
        android:background="@drawable/button_bakcground"
        android:textColor="@color/button_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_work_start" />

    <Button
        android:id="@+id/btn_work_end"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="작업 종료"
        android:textSize="80sp"
        android:background="@drawable/button_bakcground"
        android:textColor="@color/button_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_work_pause" />

    <Button
        android:id="@+id/btn_work_return"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="50dp"
        android:text="메인화면"
        android:textSize="80sp"
        android:textColor="@color/white"
        android:background="@drawable/button_bakcground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/txt_work_emp_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_work_text_1"
        app:layout_constraintStart_toEndOf="@+id/txt_work_text_1" />

    <TextView
        android:id="@+id/txt_work_emp_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_work_text_2"
        app:layout_constraintStart_toEndOf="@+id/txt_work_text_2" />


    <TextView
        android:id="@+id/txt_work_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="[사원명]"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_work_emp_id"
        app:layout_constraintStart_toEndOf="@+id/txt_work_emp_id" />

    <TextView
        android:id="@+id/txt_work_prod_qty"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_work_prod_name"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/txt_work_c_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:hint="TextView"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_work_end" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작시간"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_work_c_time"
        app:layout_constraintStart_toEndOf="@+id/txt_work_c_time" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="종료시간"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/txt_work_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="시작시간"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView7" />

    <TextView
        android:id="@+id/txt_work_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="종료시간"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="batch번호"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_work_batch_id"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_work_batch_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="batch번호"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintStart_toStartOf="@+id/textView28" />

</androidx.constraintlayout.widget.ConstraintLayout>