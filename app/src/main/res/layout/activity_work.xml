<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <TextView
        android:id="@+id/txt_work_c_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:hint="TextView"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작시간"
        android:textColor="@color/black"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/txt_work_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="시작시간"
        android:textColor="@color/black"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="종료시간"
        android:textColor="@color/black"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/txt_work_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="종료시간"
        android:textSize="30sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/txt_work_prod_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:autoSizeMinTextSize="10dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/txt_work_dept_name_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="36dp"
        android:hint="부서명"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="batch번호"
        android:textColor="@color/black"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/txt_work_batch_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="batch번호"
        android:textSize="30sp"
        android:textColor="@color/black"
        />


    <LinearLayout
        android:layout_width="750dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부서ID"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textSize="30sp"

                android:textColor="@color/white"
                android:background="@drawable/toast_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_work_dept_id"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:hint="dept_id"
                android:layout_marginStart="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview19"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/toast_background"
                android:text="부서명"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_work_dept_name"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:hint="dept_name"
                android:layout_marginStart="8dp"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_work_search_1"
                android:text="조회/입력"
                android:textSize="30sp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/toast_background"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="생산오더"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_work_order_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:inputType="number"
                android:textColorHint="@color/teal_700"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_work_prod_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/toast_background"
                android:hint="STATUS"
                android:gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="30sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_work_search_2"
                android:background="@drawable/button_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="조회/입력"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_work_prod_id"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:hint="제품ID"/>

        <TextView
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_work_prod_name"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:hint="제품명"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_work_prod_qty"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:hint="수량"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="작업 시작"
        android:textSize="84sp"
        android:textColor="@color/button_text_color"
        android:background="@drawable/button_background"
        android:id="@+id/btn_work_start"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="작업중지/사유입력"
        android:textSize="84sp"
        android:textColor="@color/button_text_color"
        android:background="@drawable/button_background"
        android:id="@+id/btn_work_pause"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="작업 종료"
        android:textSize="84sp"
        android:textColor="@color/button_text_color"
        android:background="@drawable/button_background"
        android:id="@+id/btn_work_end"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="메인메뉴"
        android:textSize="84sp"
        android:textColor="@color/white"
        android:background="@drawable/toast_background"
        android:id="@+id/btn_work_return"/>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>